    "methods": {
        "sumUpRow": "async () => {console.log('Ingreso al sumUpRow'); this.rec.Total = 0; for (let row of this.rec.Items) {this.rec.Total += parseInt(row.RowTotal || 0 )}; this.rec.SubTotal = this.rec.Total}",
        "updatePrice": "async (row, rec) => {console.log('asd') ; let prices = await cm.Price.getPrice(row.ArtCode, 1, rec.PriceDeal, moment()); row.VATPrice = prices[0]; row.Price = prices[0]; row.RowTotal = Math.round(row.Qty * row.Price); await this.sumUpRow(row)}",

        "afterShowRecord": "async (rec) => {rec.PayTerm = (await cm.SalesSettings.getAll())[0].DefaultPayTerm ; rec.Currency = (await cm.SalesSettings.getAll())[0].DefaultCurrency ; rec.CurrencyRate = 1; rec.BaseRate = 1 ; rec.DeliveryDate = moment().format('YYYY-MM-DD') ; }",
        "beforeSaveRecord": "async (draft, rec) => {if(!rec.DxDivision && !rec.DxTransit && !rec.WithSerene && !rec.WithTrailer){return draft || rec.Items.length? true : 'Completar la sección de Selección'}; if(!rec.PayTerm) {rec.PayTerm = (await cm.SalesSettings.getAll())[0].DefaultPayTerm} ; if(!rec.Currency) {rec.Currency = (await cm.SalesSettings.getAll())[0].DefaultCurrency} ; rec.CurrencyRate = 1; rec.BaseRate = 1 ; rec.DeliveryDate = moment().format('YYYY-MM-DD'); if(rec.DxDivision) {let row = cm.SalesOrderItemRow.new(); row['ArtCode'] = '00253'; row.Name = 'Servicio de amarre por barcaza'; row.Qty = 1 ; row.Unit = 'HORA' ; await updatePrice(row, rec) ; row.Price = row.VATPrice ; row.RowTotal = Math.round(row.Qty * row.Price) ; row.RowNet = row.VATPrice ; rec.Items.push(row)}; if(rec.DxTransit) {let row = cm.SalesOrderItemRow.new(); row['ArtCode'] = '00255'; row.Name = 'Transito'; row.Qty = 1 ; row.Unit = 'HORA' ; await updatePrice(row, rec) ; row.Price = row.VATPrice ; row.RowTotal = Math.round(row.Qty * row.Price) ; row.RowNet = row.VATPrice ; rec.Items.push(row)}; if(rec.WithSerene) {let row = cm.SalesOrderItemRow.new(); row['ArtCode'] = '00257'; row.Name = 'Sereno'; row.Qty = 1 ; row.Unit = 'HORA' ; await updatePrice(row, rec) ; row.Price = row.VATPrice ; row.RowTotal = Math.round(row.Qty * row.Price) ; row.RowNet = row.VATPrice ; rec.Items.push(row)}; if(rec.WithTrailer) {let row = cm.SalesOrderItemRow.new(); row['ArtCode'] = '00251'; row.Name = 'Remolcador de custodia'; row.Qty = 1 ; row.Unit = 'HORA' ; await updatePrice(row, rec) ; row.Price = row.VATPrice ; row.RowTotal = Math.round(row.Qty * row.Price) ; row.RowNet = row.VATPrice ; rec.Items.push(row)}; if(rec.SetBarges && rec.Number) {let row = cm.SalesOrderItemRow.new(); row['ArtCode'] = '00253'; row.Name = 'Servicio de amarre por barcaza'; row.Qty = rec.Number ; row.Unit = 'HORA' ; await updatePrice(row, rec);  row.Price = row.VATPrice ; row.RowTotal = Math.round(row.Qty * row.Price) ; row.RowNet = row.VATPrice ;rec.Items.push(row)} ; await sumUpRow() ; return true}"
